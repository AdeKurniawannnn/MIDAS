{
  "name": "midas-app",
  "type": "node",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build",
    "installCommand": "npm ci",
    "startCommand": "npm start"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "HOSTNAME": "0.0.0.0",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NPM_CONFIG_PRODUCTION": "false"
  },
  "healthCheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}